{
  "name": "@elephant/fact-sheet",
  "version": "1.0.0",
  "description": "CLI tool to generate self-contained property fact sheet websites from JSON data, optimized for IPFS deployment",
  "type": "module",
  "main": "./dist/lib/builder.js",
  "bin": {
    "fact-sheet": "./bin/fact-sheet.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node test/test.js",
    "dev": "node bin/fact-sheet.js generate",
    "dev:server": "node bin/fact-sheet.js dev",
    "dev:watch": "npm run build && node -e \"const chokidar = require('chokidar'); const { exec } = require('child_process'); console.log('Watching for changes...'); chokidar.watch(['templates/**/*.css', 'templates/**/*.njk'], {ignored: /node_modules/}).on('change', (path) => { console.log('File changed:', path); exec('npm run dev -- -i ./example-data/seed-data/ -o ./websites --inline-css --inline-js', (err, stdout) => { if (err) console.error(err); else console.log('Rebuild complete'); }); });\"",
    "postinstall": "npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "example": "node bin/fact-sheet.js generate --input ./example-data --output ./example-output --verbose",
    "example-inline": "fact-sheet.js generate --input ./example-data --output ./example-output-inline --inline-css --inline-js --verbose",
    "test:generate-all": "node test-generate-all.js"
  },
  "files": [
    "bin/",
    "lib/",
    "types/",
    "templates/",
    "tsconfig.json",
    "README.md"
  ],
  "keywords": [
    "property",
    "real-estate",
    "fact-sheet",
    "static-site",
    "cli",
    "ipfs",
    "elephant",
    "lexicon",
    "website-generator"
  ],
  "author": "Elephant Team",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/elephant-xyz/fact-sheet-template.git"
  },
  "homepage": "https://elephant.xyz",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "cssnano": "^7.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "html-minifier-terser": "^7.2.0",
    "luxon": "^3.6.1",
    "multiformats": "^13.4.0",
    "nunjucks": "^3.2.4",
    "postcss": "^8.4.49",
    "terser": "^5.43.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cssnano": "^5.1.3",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.1.0",
    "@types/nunjucks": "^3.2.6",
    "@types/ws": "^8.18.1",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "express": "^5.1.0",
    "open": "^10.2.0",
    "prettier": "3.6.2",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "chokidar": "^3.6.0",
    "express": "^5.1.0",
    "open": "^10.2.0",
    "ws": "^8.18.3"
  }
}
